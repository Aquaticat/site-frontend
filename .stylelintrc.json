{
  "extends": "stylelint-config-sass-guidelines",
  "rules": {
    "max-nesting-depth": 2,
    "order/order": [["dollar-variables"], {"unspecified": "ignore"}],
    "order/properties-alphabetical-order": false,
    "selector-class-pattern": null
  },
  "ignoreFiles": ["/node_modules/**", "/bin/**" ,"**/*.*", "!**/*.scss"]
}
